<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_img"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <!--<VideoView-->
        <!--android:id="@+id/video"-->
        <!--android:layout_width="400dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_below="@id/tv_foods"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="10dp"-->
        <!--/>-->

       <cn.jzvd.JzvdStd
           android:id="@+id/video"
           android:layout_width="400dp"
           android:layout_height="200dp"
           android:layout_below="@id/tv_foods"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:contentPadding="1dp"
            app:cardElevation="1dp"
            >
            <ImageView
                android:id="@+id/iv_jing"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_tag"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_jing"
                android:layout_marginLeft="50dp"
                android:gravity="center_horizontal"
                />
        </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/iv_zan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/video"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/dianzanhei"
        />
    <TextView
        android:id="@+id/tv8840"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_zan"
        android:layout_below="@id/video"
        android:text="8840"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        />
    <ImageView
        android:id="@+id/iv_cai"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/video"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/caizan"
        android:layout_toRightOf="@id/tv8840"
        />
    <TextView
        android:id="@+id/tv_cai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_cai"
        android:layout_below="@id/video"
        android:text="è¸©"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/video"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/message"
        android:layout_toRightOf="@id/tv_cai"
        />
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_message"
        android:layout_below="@id/video"
        android:text="1343"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/iv_fa"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/video"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/fa"
        android:layout_toRightOf="@id/tv_message"
        />
    <TextView
        android:id="@+id/tv_fa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fa"
        android:layout_below="@id/video"
        android:text="659"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>